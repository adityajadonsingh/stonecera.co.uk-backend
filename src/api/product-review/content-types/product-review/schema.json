{
  "kind": "collectionType",
  "collectionName": "product_reviews",
  "info": {
    "singularName": "product-review",
    "pluralName": "product-reviews",
    "displayName": "Product Review"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "email": {
      "type": "email",
      "required": true
    },
    "feedback": {
      "type": "text",
      "required": true
    },
    "stars": {
      "type": "integer",
      "required": true,
      "min": 1,
      "max": 5
    },
    "isApproved": {
      "type": "boolean",
      "required": true,
      "default": false
    },
    "product": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::product.product",
      "inversedBy": "product_reviews"
    }
  }
}
