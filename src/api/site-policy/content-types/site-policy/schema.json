{
  "kind": "collectionType",
  "collectionName": "site_policies",
  "info": {
    "singularName": "site-policy",
    "pluralName": "site-policies",
    "displayName": "Site Policy"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "pageName": {
      "type": "enumeration",
      "required": true,
      "enum": [
        "Privacy_Policy",
        "Terms_of_use",
        "Cookie_Policy",
        "Shipping_Policy",
        "Cancellations_Refunds"
      ]
    },
    "pageDescription": {
      "type": "customField",
      "customField": "plugin::ckeditor5.CKEditor",
      "options": {
        "preset": "defaultHtml"
      },
      "required": true
    }
  }
}
